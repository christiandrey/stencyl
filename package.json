{
	"name": "stencyl-beta",
	"version": "1.3.0",
	"description": "A SlateJS based document template RTE",
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"files": [
		"dist"
	],
	"scripts": {
		"start": "rollup -c -w",
		"build": "NODE_ENV=production rollup -c",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"prepare": "run-s build && husky install",
		"prettier:write": "npx prettier --write '**/*.{js,jsx,ts,tsx,json}' && npx prettier --write \"*.{js,jsx,ts,tsx,json}\"",
		"predeploy": "cd example && yarn install && yarn run build",
		"deploy": "gh-pages -d example/build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/christiandrey/stencyl.git"
	},
	"author": "christiandrey",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/christiandrey/stencyl/issues"
	},
	"homepage": "https://github.com/christiandrey/stencyl#readme",
	"peerDependencies": {
		"react": ">=16.8.0",
		"react-dom": ">=16.8.0"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^20.0.0",
		"@rollup/plugin-image": "^2.1.1",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.4",
		"@types/react": "^17.0.21",
		"autoprefixer": "^10.3.4",
		"gh-pages": "^3.2.3",
		"husky": ">=6",
		"lint-staged": ">=10",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.3.6",
		"postcss-nesting": "^8.0.1",
		"prettier": "^2.4.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"rollup": "^2.56.3",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-postcss": "^4.0.1",
		"rollup-plugin-typescript2": "^0.30.0",
		"tailwindcss": "^2.2.15",
		"typescript": "^4.4.3"
	},
	"lint-staged": {
		"*.{js,css,md}": "prettier --write"
	}
}
