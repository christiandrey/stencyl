{
	"name": "stencyl",
	"version": "1.0.0",
	"description": "A SlateJS based document template RTE",
	"author": "christiandrey",
	"license": "MIT",
	"repository": "christiandrey/stencyl",
	"main": "dist/index.js",
	"module": "dist/index.modern.js",
	"source": "src/index.tsx",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "NODE_ENV=production microbundle-crl --no-compress --format modern,cjs",
		"start": "microbundle-crl watch --no-compress --format modern,cjs",
		"prepare": "run-s build && husky install",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"prettier:write": "npx prettier --write '**/*.{js,jsx,ts,tsx,json}' && npx prettier --write \"*.{js,jsx,ts,tsx,json}\"",
		"test": "run-s test:unit test:lint test:build",
		"test:build": "run-s build",
		"test:lint": "eslint .",
		"test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
		"test:watch": "react-scripts test --env=jsdom",
		"predeploy": "cd example && yarn install && yarn run build",
		"deploy": "gh-pages -d example/build"
	},
	"peerDependencies": {
		"@react-pdf/renderer": "^2.0.19",
		"react": "^16.0.0",
		"react-dom": "^16.0.0"
	},
	"devDependencies": {
		"@react-pdf/renderer": "^2.0.19",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.5.0",
		"@testing-library/user-event": "^7.2.1",
		"@types/file-saver": "^2.0.3",
		"@types/is-url": "^1.2.30",
		"@types/jest": "^25.1.4",
		"@types/node": "^12.12.38",
		"@types/react": "^16.9.27",
		"@types/react-dom": "^16.9.7",
		"@types/uuid": "^8.3.1",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"autoprefixer": "^9",
		"babel-eslint": "^10.0.3",
		"cross-env": "^7.0.2",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.7.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-config-standard-react": "^9.2.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-node": "^11.0.0",
		"eslint-plugin-prettier": "^3.1.1",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react": "^7.17.0",
		"eslint-plugin-standard": "^4.0.1",
		"gh-pages": "^2.2.0",
		"husky": ">=6",
		"lint-staged": ">=10",
		"microbundle-crl": "^0.13.11",
		"npm-run-all": "^4.1.5",
		"postcss": "^7",
		"postcss-nested": "^5.0.6",
		"prettier": "^2.3.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-scripts": "^3.4.1",
		"tailwindcss": "npm:@tailwindcss/postcss7-compat",
		"typescript": "^4.3.5"
	},
	"files": [
		"dist"
	],
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	},
	"dependencies": {
		"alphanumerize": "1.0.0",
		"classnames": "2.3.1",
		"date-fns": "2.23.0",
		"file-saver": "2.0.5",
		"hex-alpha": "1.3.0",
		"is-url": "1.2.4",
		"react-switch": "6.0.0",
		"romanize": "1.1.1",
		"slate": "0.66.1",
		"slate-history": "0.66.0",
		"slate-hyperscript": "0.66.0",
		"slate-react": "0.66.1",
		"use-debounced-effect": "1.2.0",
		"uuid": "8.3.2"
	}
}
